<%- layout("/layouts/boilerplate.ejs") %> <br /><br />
<h2 style="text-align: center">Create New listing</h2>
<div class="row">
  <div class="col-8 offset-2">
    <form
      action="/listings"
      method="POST"
      class="needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <input
          type="text"
          name="title"
          placeholder="Enter Title"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <textarea
          name="description"
          id="description"
          placeholder="write description"
          class="form-control"
          required
        ></textarea>
      </div>
      <div class="mb-3">
        <input
          class="form-control"
          type="file"
          name="image"
          id="image"
        />
      </div>
      <div class="mb-3">
        <select name="category" required class="form-select" >
          <option  value="Choose Category" >Choose Category</option>
          <option value="Beachfront">Beach</option>
          <option value="Mountains">Mountains</option>
          <option value="Rooms">Rooms</option>
          <option value="Pool">Pool</option>
          <option value="Snowy">Snowy</option>
          <option value="Religious">Religious</option>
          <option value="Mountain City">Mountain City</option>
        </select>
      </div>
      <div class="row">
        <div class="mb-3 col-5">
          <input
            type="number"
            name="price"
            id="price"
            placeholder="Price"
            required
            class="form-control"
          />
        </div>
        <div class="mb-3 col-5">
          <input
            type="text"
            placeholder="location"
            name="location"
            id="location"
            required
            class="form-control"
          />
        </div>
      </div>
      <div class="mb-3 col-5">
        <input
          type="text"
          name="country"
          id="country"
          placeholder="country"
          required
          class="form-control"
        />
      </div>
      <br />
      <button class="btn edit-btn">Add</button>
      <br /><br />
    </form>
  </div>
</div>
