<%- layout("/layouts/boilerplate.ejs") %>
<br><br>
<h2 style="text-align: center;" >Create New listing</h2>
<div class="row">
    <div class="col-8 offset-2 ">
<form action="/listings" method="POST" class="needs-validation" novalidate>
  <div class="mb-3" >
    <input type="text" name="title" placeholder="Enter Title" class="form-control" required />
  </div>
  <div class="mb-3">
    <textarea
      name="description"
      id="description"
      placeholder="write description"
      class="form-control"
      require
    ></textarea>
  </div>
  <div class="mb-3" >
    <input
      class="form-control"  
      type="text"
      name="image"
      id="image"
      placeholder="enter image link/url"
      required
    />
  </div  >
  <div class="row">
    <div class="mb-3 col-5" >
    <input type="number" name="price" id="price" placeholder="Price" required  class="form-control" />
  </div>
  <div class="mb-3 col-5" >
    <input type="text" placeholder="location" name="location" id="location" required class="form-control"/>
  </div>
  </div>
  <div class="mb-3 col-5" >
    <input type="text" name="country" id="country" placeholder="country" required class="form-control" />
  </div>
  <br>
  <button class="btn">Add</button>  
  <br><br>
</form>
</div>
</div>
