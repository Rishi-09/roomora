<%- layout("/layouts/boilerplate.ejs") %>
<h2 style="text-align: center;"  class="mt-3" >SignUp</h2>
<div class="row mt-3">
  <div class="col-4 offset-4">
    <form action="/signup" method="POST" class="needs-validation" novalidate>
        <div class="mb-3 mt-3">
        <input
          type="text"
          name="username"
          id="Username"
          placeholder="Username"
          class="form-control"
          required
        />
        </div>
        
         <div class="mb-3 mt-3">
        <input
          type="email"
          name="email"
          id="email"
          placeholder="email"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3 mt-3">
        <input
          type="password"
          name="password"
          id="password"
          placeholder="Password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-success mt-3 mb-3"  >Sign Up</button>
    </form>
  </div>
</div>
